@inherits CofoundryWebViewPage<CustomEntityDetailsPageViewModel<BlogPostDetailsDisplayModel>>
@using Cofoundry.Domain

@{
    var post = Model.CustomEntity.Model;
}

<div class="container">

    <div class="row content-block">
        <div class="col-sm-12">
            <h1>@Model.PageTitle</h1>
        </div>
    </div>


    @(Cofoundry.UI.CustomEntitySection("Body")
        .AllowMultipleModules()
        .EmptyContentMinHeight(500))


    @if (!EnumerableHelper.IsNullOrEmpty(post.Categories))
    {
        <div class="row content-block">
            <div class="col-sm-12">
                <h3>Categories</h3>

                <ul class="list-group--alt">
                    @foreach (var category in post.Categories)
                {
                        <li><a href="/blog?categoryId=@category.CategoryId" title="@category.ShortDescription">@category.Title</a></li>
                    }
                </ul>
            </div>
        </div>
    }

</div>