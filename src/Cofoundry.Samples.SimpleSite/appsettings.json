{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "SimpleSite": {
    "ContactRequestNotificationToAddress": "contact-requests@example.com"
  },

  "Cofoundry": {

    "Database": {
      "ConnectionString": "Server=.\\sqlexpress;Database=Cofoundry.Samples.SimpleSite;Integrated Security=True;Encrypt=False;MultipleActiveResultSets=True"
    },

    "Mail": {
      "DefaultFromAddress": "auto@example.com"
    },

    "SmtpMail": {
      "DebugMailDropDirectory": "~/App_Data/Mail"
    }
  }
}
